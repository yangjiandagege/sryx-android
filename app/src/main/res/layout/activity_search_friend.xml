<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_search_friend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yj.sryx.view.im.SearchFriendActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/color_white">
        <com.yj.sryx.widget.SearchEditText
            android:id="@+id/edt_search_friend"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/search_edit_bg"
            android:drawableLeft="@mipmap/search"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:hint="请输入对方姓名"
            android:imeOptions="actionSearch"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="16sp"
            app:drawableDel="@mipmap/edit_delete"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/header_pic"/>
</LinearLayout>
