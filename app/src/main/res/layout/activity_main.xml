<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/theme_yellow_background">
    <include layout="@layout/toolbar_main"/>

    <com.yj.sryx.widget.CircleImageView
        android:id="@+id/iv_header"
        android:layout_width="180px"
        android:layout_height="180px"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        tools:text="被人追杀的eason"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70px"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_create_game"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/theme_green_primary">
            <TextView
                android:id="@+id/tv_create_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/toolbar_title_size"
                android:transitionName="@string/transition_toolbar"
                android:textColor="@color/text_light"
                tools:targetApi="lollipop"
                android:text="创建游戏"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_join_game"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/theme_blue_primary">
            <TextView
                android:id="@+id/tv_join_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/toolbar_title_size"
                android:transitionName="@string/transition_toolbar"
                android:textColor="@color/text_light"
                tools:targetApi="lollipop"
                android:text="加入游戏"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_my_record"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/theme_spe_primary">
            <TextView
                android:id="@+id/tv_my_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/toolbar_title_size"
                android:transitionName="@string/transition_toolbar"
                android:textColor="@color/text_light"
                tools:targetApi="lollipop"
                android:text="我的记录"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>