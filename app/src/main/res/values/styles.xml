<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#505050</item>
        <item name="android:windowBackground">@color/colorPageBgGray</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.QuizActivity">
        <item name="android:windowSharedElementEnterTransition">@transition/quiz_shared_enter_def
        </item>
    </style>

    <style name="AppTheme.ToolbarWhite" parent="@style/ThemeOverlay.AppCompat.Light">
